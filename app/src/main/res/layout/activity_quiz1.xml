<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".quiz1">
    <TextView
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="20dp"
        android:background="#512DA8"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/amarante"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Siapa Anak Durhaka yang dikutuk jadi Batu oleh Ibunya?"/>

    <EditText

        android:id="@+id/et_input1"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#fff"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <LinearLayout
        android:layout_marginTop="70dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="20dp"
            android:background="@drawable/kancil"
            android:layout_width="150dp"
            android:layout_height="130dp"/>
        <RelativeLayout
            android:layout_width="30dp"
            android:layout_height="20dp"/>
        <ImageView
            android:layout_marginRight="20dp"
            android:background="@drawable/malin"
            android:layout_width="150dp"
            android:layout_height="130dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:fontFamily="@font/amarante"
            android:layout_marginLeft="30dp"
            android:text="kancil"
            android:id="@+id/bt_sw1"
            android:layout_width="150dp"
            android:layout_height="50dp"/>
        <RelativeLayout
            android:layout_width="30dp"
            android:layout_height="20dp"/>
        <Button
            android:fontFamily="@font/amarante"
            android:text="Malin Kundang"
            android:id="@+id/bt_sww2"
            android:layout_width="150dp"
            android:layout_height="50dp"/>


    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="70dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="20dp"
            android:background="@drawable/timun"
            android:layout_width="150dp"
            android:layout_height="130dp"/>
        <RelativeLayout
            android:layout_width="30dp"
            android:layout_height="20dp"/>
        <ImageView
            android:layout_marginRight="20dp"
            android:background="@drawable/toba"
            android:layout_width="150dp"
            android:layout_height="130dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:fontFamily="@font/amarante"
            android:layout_marginLeft="30dp"
            android:text="Timun Mas"
            android:id="@+id/bt_sw3"
            android:layout_width="150dp"
            android:layout_height="50dp"/>
        <RelativeLayout
            android:layout_width="30dp"
            android:layout_height="20dp"/>
        <Button
            android:fontFamily="@font/amarante"
            android:text="Toba"
            android:id="@+id/bt_sw4"
            android:layout_width="150dp"
            android:layout_height="50dp"/>


    </LinearLayout>
</LinearLayout>